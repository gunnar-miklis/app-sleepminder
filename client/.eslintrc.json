{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"google",
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"plugin:react-hooks/recommended"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-console": "off",
		"max-len": "off",
		// "arrow-parens": "off",
		"space-in-parens": [
			"error",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"no-tabs": 0,
		"indent": [
			"error",
			"tab"
		],
		"require-jsdoc": [
			"error",
			{
				"require": {
					"FunctionDeclaration": false,
					"MethodDefinition": false,
					"ClassDeclaration": false,
					"ArrowFunctionExpression": false,
					"FunctionExpression": false
				}
			}
		],
		"react/prop-types": "off"
	}
}